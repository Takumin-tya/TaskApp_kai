<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jp.techacademy.takumi.fukushima.taskapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_edit_text"
        android:hint="タイトル"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_edit_text"
        android:id="@+id/content_edit_text"
        android:hint="内容"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_edit_text"
        android:text="カテゴリー"
        android:id="@+id/category_text"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_text"
        android:id="@+id/category_spiner_text"
        android:hint="カテゴリー"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spiner_text"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/times_button"
        android:id="@+id/date_button"
        android:text="----/--/--"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_spiner_text"
        android:layout_alignParentRight="true"
        android:id="@+id/times_button"
        android:text="--:--"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_button"
        android:id="@+id/add_category"
        android:text="カテゴリ追加"/>
    <Button
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/times_button"
        android:layout_alignParentRight="true"
        android:id="@+id/done_button"
        android:text="決定"/>
</RelativeLayout>